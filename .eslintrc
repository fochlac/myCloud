{
  "extends": ["standard", "plugin:react/recommended", "prettier", "prettier/react", "prettier/standard"],
  "env": {
    "node": true,
    "browser": true
  },
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": { "experimentalObjectRestSpread": true }
  },
  "settings": {
    "react": {
      "version": "16.4"
    }
  },
  "overrides": [
    {
      "files": ["*.spec.js", "**/jest/**/*.js"],
      "env": { "jest": true }
    }
  ]
}
