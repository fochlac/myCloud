{
  "compilerOptions": {
    "target": "ESNext",
    "module": "commonjs",
    "outDir": "dist",
    "baseUrl": "./src",
    "sourceMap": true,
    "paths": {
      "utils/*": ["utils/*"],
      "controller/*": ["router/controller/*"],
      "middleware/*": ["router/middleware/*"],
      "modules/*": ["modules/*"]
    }
  },
  "include": ["src/**/*.ts", "./typings/*.d.ts", "./node_modules/@types/**/*.d.ts"],
  "exclude": ["node_modules", "storage"]
}
